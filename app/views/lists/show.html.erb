<h2>Lists</h2>
<p><%= @list.name %></p>
<% @list.bookmarks.each do |bookmark| %>
  <p><%= bookmark.comment %></p>
  <%= link_to "Remove",
              bookmark_path(bookmark),
              method: :delete,
              data: { confirm: "Are you sure?" } %>
<% end %>

<%= simple_form_for([@list, @bookmark]) do |f| %>
  <%= f.input :comment %>
  <%= f.association :movie %>
  <%= f.submit %>
<% end %>
